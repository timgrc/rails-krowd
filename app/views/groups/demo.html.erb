<div id="wrapper">
  <%= render 'groups/dashboard/sidebar' %>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <section id="general" class="margin-top">
          <div class="text-center section-title"><i class="fa fa-tachometer" aria-hidden="true"></i>&nbsp;GENERAL ACTIVITY</div>
          <%= render 'groups/dashboard/general/index' %>
        </section>
      </div>
      <div class="row">
        <section id="badges">
          <div class="text-center section-title"><i class="fa fa-user-circle-o" aria-hidden="true"></i>&nbsp;AWARDS</div>
          <%= render 'groups/dashboard/badges/index' %>
        </section>
      </div>
      <div class="row">
        <section id="organization">
          <div class="text-center section-title"><i class="fa fa-users" aria-hidden="true"></i>&nbsp;ORGANISATION IMPACT</div>
          <%= render 'groups/dashboard/organization/index' %>
        </section>
      </div>
      <div class="row">
        <section id="innovation">
          <div class="text-center section-title"><i class="fa fa-lightbulb-o" aria-hidden="true"></i>&nbsp;INNOVATION CAPACITY</div>
          <%= render 'groups/dashboard/innovation/index' %>
        </section>
      </div>
      <div class="row">
        <section id="push">
          <div class="text-center section-title"><i class="fa fa-check" aria-hidden="true"></i>&nbsp;PUSH MESSAGES</div>
          <%= render 'groups/dashboard/push/index' %>
        </section>
      </div>
    </div>
  </div>
</div>

<% content_for :after_js do %>
  <script>
    if ( window.location.hash ) scroll(0,0);
    setTimeout( function() { scroll(0,0); }, 1 );

    $( function(){
      if(window.location.hash) {
          var anchor = window.location.hash
          $('.tab.active').removeClass("active");
          $('a[href="' + anchor + '"]').addClass("active");
          // smooth scroll to the anchor id
          $('html, body').animate({
              scrollTop: $(window.location.hash).offset().top - 40
          }, 1000, 'swing');
      }
    } )
  </script>
<% end %>

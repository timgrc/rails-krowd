<canvas id="horizontal-business-bars"></canvas>
<%= content_for :business_bars_js do %>
  <script>
    var ctx = document.getElementById("horizontal-business-bars").getContext("2d");
    var gradient = ctx.createLinearGradient(0, 0, 200, 0);
    gradient.addColorStop(0, '#36AD7E');
    gradient.addColorStop(1, '#5BC5F1');

    var data = {
        labels: ["", ""],
        datasets: [
            {
                // label: "My First dataset",
                backgroundColor: [
                    'rgba(54, 173, 126, 0.5)',
                    'rgba(94, 201, 109, 0.2)'
                ],
                borderColor: [
                    'rgba(18, 186, 41, 1)',
                    'rgba(18, 186, 41, 1)'
                ],
                borderWidth: 1,
                data: <%= KpiDash.new(@group, 'organisation_business').call[:likes_comments] %>,
            }
        ]
    };

    var myBarChart = new Chart(ctx, {
      type: 'horizontalBar',
      data: data,
      options: {
        scales: {
          xAxes: [
            {
              ticks: {
                beginAtZero:true
              },
              scaleLabel:{
                  display:false
              },
              gridLines: {
              },
              stacked: true
            }
          ],
          yAxes: [{
            display: false
          }]
        },
        legend:{
          display:false
        }
      }
    });
  </script>
<% end %>

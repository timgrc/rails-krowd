#general {
  color: #E6E6E6;
}

#general .row {
  height: 50%;
  min-height: 350px;
}

.general-title h3 {
  font-size: 26px;
}

.general-title h4 {
  font-family: 16px;
}

.retention-donut-size {
  width:    240px;
  height:   240px;
}

.grid-donut {
  height: 100%;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.donut-title {
  text-align: center;
  font-size: 40px;
  background: -webkit-linear-gradient(<%= "left, #{Dashboard.likes_color}, #{Dashboard.comments_color}" %>);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.donut-subtitle {
  text-align: center;
  font-size: 14px;
  background: -webkit-linear-gradient(<%= "left, #{Dashboard.likes_color}, #{Dashboard.comments_color}" %>);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

#regions_div {
  height: calc(100% - #{$grid-height});
}

#comments_country_bar_chart {
  width: calc(100% - 80px);
  height: calc(100% - 80px);
}


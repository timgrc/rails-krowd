#innovation .row {
  height: 100%;
  position: relative;
  // min-height: 600px;
}

#innovation .grid-element {
  height: 100%;
  position: relative;
  min-height: 600px;
}

.innovation-donut {
  margin:   auto;
  // width:    280px;
  // height:   280px;
  position: relative;
}

.innovation-donut i {
  font-size: 35px;
  background: -webkit-linear-gradient(<%= Dashboard.technology_color %>, <%= Dashboard.business_color %>);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  z-index: 10;
}


.innovation-donut-container {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  width:  100%;
  height: 100%;
  z-index: 10;
}

.innovation_donut_content {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  width:  100%;
  height: 100%;
}

.innovation-legend-container {
  position: absolute;
  z-index: 5;
  display: flex;
  align-items: center;
  justify-content: center;
  width: calc(100% - 100px);
  margin-top: 50px;
  font-size: 12px;
}

.innovation-legend-margin-padding {
  margin: 5px;
  padding: 5px;
}

#innovation-legend-business {
  background: $innovation-legend-business-bg-color;
}

#innovation-legend-technology {
  background: $innovation-legend-technology-bg-color;
}

@media (max-width: $screen-xs-max) {
  #innovation .row {
    height: 300%;
  }
}

@media (max-width: $screen-md-max) {
  .innovation-legend-container {
    width: calc(100% - 60px);
  }
}

#business-disruption-legend {
  color: $blue-krowd;
}

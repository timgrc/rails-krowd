<canvas style="width: 80%; max-height: 200px;" id="horizontal-tech-bars"></canvas>
<%= content_for :after_js do %>
  <script>
    var ctx = document.getElementById("horizontal-tech-bars");

    var data = {
      labels: ["", ""],
      datasets: [{
        backgroundColor: [
            'rgba(91, 197, 241, 0.4)',
            'rgba(46, 134, 171, 0.2)'
        ],
        borderColor: [
            'rgba(54, 162, 235, 1)',
            'rgba(54, 162, 235, 1)'
        ],
        borderWidth: 1,
        data: <%= KpiDash.new(@group, 'organisation_technology').call[:likes_comments] %>
      }]
    };

    var myBarChart = new Chart(ctx, {
      type: 'horizontalBar',
      data: data,
      options: {
        scales: {
          xAxes: [{
            ticks: {
              beginAtZero: true
            }
          }],
          yAxes: [{
            barThickness: 30
          }]
        }
      }
    });
  </script>
<% end %>

<div class="grid-donut">
  <canvas class='donut-chart donut-chart-innovation' id=<%= donut_id %>></canvas>
  <%= content_for :donuts_js do %>
    <script>
      function <%= donut_id %>() {
        var ctx = document.getElementById("<%= donut_id %>").getContext("2d");
        var myChart = new Chart(ctx, {
          type: 'doughnut',
          data: {
            labels: [
            'Business - Innovation',
            'Business - Disruption',
            'Technology - Innovation',
            'Technology - Disruption'
            ],
            datasets: [{
                // label: '# of Votes',
                data: <%= KpiDash.new(@group, kpi).call %>,
                backgroundColor: [
                '#5BC5F1',
                '#2e86ab',
                '#36AD7E',
                '#133c55'
                ],
                borderWidth: 0,
            }]
          },
          options: {
            cutoutPercentage: 75,
            legend: { display: false }
          }
        });
      }
    </script>
  <% end %>
  <i class="fa fa-lightbulb-o" aria-hidden="true"></i>
</div>

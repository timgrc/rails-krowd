<canvas style="width: 90%; height: 200px; border: 1px solid red;" id="horizontal-business-bars"></canvas>
<%= content_for :charts_js do %>
  <script>
    var ctx = document.getElementById("horizontal-business-bars");

    var data = {
      labels: ["", ""],
      datasets: [{
        backgroundColor: [
            'rgba(54, 173, 126, 0.5)',
            'rgba(94, 201, 109, 0.2)'
        ],
        borderColor: [
            'rgba(18, 186, 41, 1)',
            'rgba(18, 186, 41, 1)'
        ],
        borderWidth: 1,
        data: <%= KpiDash.new(@group, 'organisation_business').call[:likes_comments] %>
      }]
    };

    var myBarChart = new Chart(ctx, {
      type: 'horizontalBar',
      data: data,
      options: {
        scales: {
          xAxes: [{
            ticks: {
              beginAtZero: true
            }
          }],
          yAxes: [{
            barThickness: 30
          }]
        }
      }
    });
  </script>
<% end %>

<div id="regions_div" style="width: 900px; height: 500px; border: 1px solid black;"></div>
<% data = {
          labels: [
                "Business - Stong disruption",
                "Business - Weak disruption",
                "Technology - Stong disruption",
                "Technology - Weak disruption"
            ],
            datasets: [
                {
                    data: [['France', 600], ['United States', 300]]
                }]
        } %>
<div><%= geo_chart data %></div>

<% content_for :map_js do %>
  <script>
    google.charts.load('upcoming', {'packages':['geochart']});
      google.charts.setOnLoadCallback(drawRegionsMap);

      function drawRegionsMap() {

        var data = google.visualization.arrayToDataTable([
          ['Country', 'Popularity'],
          ['Germany', 200],
          ['United States', 300],
          ['Brazil', 400],
          ['Canada', 500],
          ['France', 600],
          ['RU', 700]
        ]);

        var options = {};

        var chart = new google.visualization.GeoChart(document.getElementById('regions_div'));

        chart.draw(data, options);
      }
  </script>
<% end %>

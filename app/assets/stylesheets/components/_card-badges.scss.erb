.badge-card {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.white-card {
  color: black;
}

.badge-pictures {
  position: relative;
}

.badge-pictures .reward-picto {
  position: absolute;
  top: 65%;
  right: 25%;
  width: 15%;
  z-index: 1;
}

.avatar-badges {
  border: 5px solid $dam-color-3;
  border-radius: 50%;
  width: 50%;
}

.avatar-badges-best {
  border-radius: 50%;
  width: 100%;
  z-index: 1;
}

.best-reward {
  // background-image: asset-url("triangle-vert.png");
  // background-size: 10%;
  // background-repeat: no-repeat;
  // background-position-y: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.grad-border {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  position: relative;
  margin: auto;
  border-radius: 50%;
  background: #fff;
}
.grad-border:after {
  content: '';
  position: absolute;
  top: -5px;
  bottom: -5px;
  right: -5px;
  left: -5px;
  background-image: linear-gradient(left, <%= Dashboard.likes_color %>, <%= Dashboard.comments_color %>);
  border-radius: inherit;
}


